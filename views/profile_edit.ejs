<!DOCTYPE html>
<html lang="en">

<%- include('partials/head') %>
<body class="bg-home">

    <%- include("partials/topnav") %>
    <div class="container">
        
        <div class="p-5 m-5 bg-opacity-50 bg-dark rounded-5">
            <div class="text-center">
                <img class="rounded-circle" height="200" src="assets/logo.png" alt="profile pic">
            </div>
            <div class=" text-white">
                <div class="container d-flex justify-content-center align-items-center  p-5">
                <form action="" class="">
                <div class="row mb-2 bg-dark p-3 rounded-3">Name: <input type="text" class="form-control" value="<%=user[0].firstname + " " + user[0].lastname  %>"> </div>
                <div class="row mb-2 bg-dark p-3 rounded-3">Sex: <select name="" id="" class="form-select">
                    <option <% if (user[0].sex == 'Male') {%> selected <% } %> value="Male">Male</option>
                    <option <% if (user[0].sex == 'Female') {%> selected <% } %> value="Female">Female</option>
                    </select>
                </div>
                <div class="row mb-2 bg-dark p-3 rounded-3">Phone Number: <input type="text" class="form-control"  value="<%=user[0].phone%>"> </div>
                <div class="row mb-2 bg-dark p-3 rounded-3">Email: <input type="text" class="form-control"  value=" <%=user[0].email%>"></div>
                <div class="row mb-2 bg-dark p-3 rounded-3">Birthdate:  <input type="date" name="birthdate" id="birthdate" class="form-control" value="<%= user[0].birthdate.toISOString().slice(0, 10) %>">
                </div>
                <div class="row mb-2 bg-dark p-3 rounded-3">Address:  <input type="text" name="" id="" class="form-control" value="<%=user[0].address%>"> </div> 
                <div class="row mb-2  p-3 rounded-3"><button type="submit" class="col btn btn-primary me-2">Save Changes</button> <a href="/profile" class="col btn btn-danger">Cancel</a></div>
                </form>
               
                
            </div>
                
            </div>
        </div>
    </div>
</body>
</html>
